{
  "displayName": "Summary Too Short > 0 per hour (${ENV})",
  "combiner": "OR",
  "conditions": [
    {
      "displayName": "summary_too_short rate",
      "conditionThreshold": {
        "filter": "metric.type=\"logging.googleapis.com/user/summary_too_short_count\" AND resource.type=\"cloud_run_revision\"",
        "comparison": "COMPARISON_GT",
        "thresholdValue": 0,
        "duration": "0s",
        "aggregations": [
          {
            "alignmentPeriod": "3600s",
            "perSeriesAligner": "ALIGN_RATE"
          }
        ]
      }
    }
  ],
  "notificationChannels": [
    "projects/${PROJECT_ID}/notificationChannels/${PAGERDUTY_CHANNEL}",
    "projects/${PROJECT_ID}/notificationChannels/${EMAIL_CHANNEL}"
  ],
  "documentation": {
    "content": "Runbook: https://runbooks.mcc/ocr/${ENV}/summary-too-short",
    "mimeType": "text/markdown"
  }
}
