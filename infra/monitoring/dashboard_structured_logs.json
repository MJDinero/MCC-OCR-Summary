{
  "displayName": "Structured Summariser Signals",
  "gridLayout": {
    "columns": 2,
    "widgets": [
      {
        "title": "Summariser Success Rate",
        "logsPanel": {
          "filter": "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"mcc-ocr-summary\" AND jsonPayload.message=\"supervisor_passed\"",
          "resourceNames": ["projects/quantify-agent"]
        }
      },
      {
        "title": "Short Summary Count",
        "logsPanel": {
          "filter": "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"mcc-ocr-summary\" AND jsonPayload.message=\"summary_too_short\"",
          "resourceNames": ["projects/quantify-agent"]
        }
      },
      {
        "title": "Avg Chunk Length",
        "logsPanel": {
          "filter": "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"mcc-ocr-summary\" AND jsonPayload.fields.avg_chunk_chars=*",
          "resourceNames": ["projects/quantify-agent"]
        }
      },
      {
        "title": "DocAI Latency",
        "logsPanel": {
          "filter": "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"mcc-ocr-summary\" AND jsonPayload.fields.docai_call_success.duration=*",
          "resourceNames": ["projects/quantify-agent"]
        }
      }
    ]
  }
}
