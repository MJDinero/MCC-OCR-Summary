# MCC-OCR-Summary .env.template
###############################

# Core
APP_ENV=production
LOG_LEVEL=INFO
ENABLE_METRICS=true
MAX_PDF_BYTES=83886080

# CORS (comma separated list) e.g. https://example.com,https://other.com
CORS_ORIGINS=

# Google Document AI
GCP_PROJECT_ID=
GCP_LOCATION=
GCP_PROCESSOR_ID=
# Optional: service account JSON path if not using workload identity
GOOGLE_APPLICATION_CREDENTIALS=

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=
USE_STRUCTURED_SUMMARISER=true

# Request timeouts
REQUEST_TIMEOUT_SECONDS=60

# NOTE: Never commit a filled-in .env file. This template lists required/optional variables.
